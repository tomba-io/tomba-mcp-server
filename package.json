{
  "name": "tomba-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server for Tomba.io API integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "debug": "npm run build && npx @modelcontextprotocol/inspector dist/index.js",
    "debug:dev": "tsx --env-file=.env src/index.ts | npx @modelcontextprotocol/inspector",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "npm run build && node test/integration.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "bin": {
    "tomba-mcp-server": "dist/index.js"
  },
  "keywords": [
    "mcp",
    "tomba",
    "email",
    "verification",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "tomba": "1.0.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
